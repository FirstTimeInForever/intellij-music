<idea-plugin>
    <id>intellij.music</id>
    <name>Intellij Music</name>
    <vendor email="diralik+intellij-music@yandex.ru" url="https://jetbrains.com">JetBrains</vendor>

    <description><![CDATA[
    Play music as you type
    ]]></description>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable displayName="Intellij Music Plugin" instance="intellij.music.MusicConfigurable" />
        <applicationService serviceImplementation="intellij.music.MusicConfig" />
    </extensions>

    <actions>
        <action id="IntellijMusic.DebugAction" class="intellij.music.MusicDebugAction"
                text="Music Debug Action" icon="AllIcons.Actions.ShowAsTree">
            <add-to-group group-id="ToolbarRunGroup" anchor="first" />
        </action>
    </actions>

    <application-components>
        <component>
            <implementation-class>intellij.music.MyApplicationComponent</implementation-class>
        </component>
    </application-components>
</idea-plugin>
