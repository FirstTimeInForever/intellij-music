<idea-plugin>
    <id>intellij.music</id>
    <name>Fancy Music</name>
    <vendor email="diralik+fancy-music@yandex.ru" url="https://fancy-music.ai">Fancy Music</vendor>

    <description><![CDATA[
        When you are typing, there will be ring out a beautiful background music.
    ]]></description>

    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable displayName="Fancy Music Plugin" instance="intellij.music.ui.MusicConfigurable" />
        <applicationService serviceImplementation="intellij.music.ui.MusicConfig" />
        <typedHandler implementation="intellij.music.ui.MusicTypedHandlerDelegate" />
    </extensions>

    <actions>
        <action id="IntellijMusic.DebugAction" class="intellij.music.ui.MusicDebugAction"
                text="Music Debug Action" icon="AllIcons.Actions.ShowAsTree">
            <add-to-group group-id="ToolbarRunGroup" anchor="first" />
        </action>
        <action id="IntellijMusic.NextTrackAction" class="intellij.music.ui.MusicNextTrackAction"
                text="Music Next Track Action" icon="AllIcons.Actions.ShowAsTree">
            <add-to-group group-id="ToolbarRunGroup" anchor="first" />
        </action>
    </actions>

    <application-components>
        <component>
            <implementation-class>intellij.music.ui.MusicApplicationComponent</implementation-class>
        </component>
    </application-components>
</idea-plugin>
